<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B">

    <ScrollView
        android:id="@+id/scrollContenidoRegistro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/barraInferior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clientes"
                android:textColor="#D0BA12"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="20dp"
                android:gravity="left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="left"/>

            <EditText
                android:id="@+id/inputNombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="María"
                android:textColorHint="#ADADAD"
                android:background="@drawable/rounded_border"
                android:textColor="#FFFFFF"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:gravity="left"/>

            <EditText
                android:id="@+id/inputApellido"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="González"
                android:textColorHint="#ADADAD"
                android:background="@drawable/rounded_border"
                android:textColor="#FFFFFF"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DNI"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:gravity="left"/>

            <EditText
                android:id="@+id/inputDNI"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="12345678"
                android:inputType="number"
                android:textColorHint="#ADADAD"
                android:background="@drawable/rounded_border"
                android:textColor="#FFFFFF"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:gravity="left"/>

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="maria.gonzalez@example.com"
                android:inputType="textEmailAddress"
                android:textColorHint="#ADADAD"
                android:background="@drawable/rounded_border"
                android:textColor="#FFFFFF"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Nacimiento"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:gravity="left"/>

            <EditText
                android:id="@+id/inputFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="15/05/1990"
                android:textColorHint="#ADADAD"
                android:background="@drawable/rounded_border"
                android:textColor="#FFFFFF"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Inscripción"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:gravity="left"/>

            <EditText
                android:id="@+id/inputTipoInscripcion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Socio"
                android:textColorHint="#ADADAD"
                android:background="@drawable/rounded_border"
                android:textColor="#FFFFFF"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apto físico"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:gravity="left"/>

            <EditText
                android:id="@+id/inputAptoFisico"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Posee"
                android:textColorHint="#ADADAD"
                android:background="@drawable/rounded_border"
                android:textColor="#FFFFFF"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnRegistrarCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTRAR"
                android:layout_marginTop="32dp"
                android:backgroundTint="#D0BA12"
                android:textColor="#1B1B1B"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/barraInferior"
        layout="@layout/activity_barra_inferior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
