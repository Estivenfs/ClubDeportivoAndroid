<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <View
            android:src="@drawable/pesas"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#D9D9D9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicia sesión\ncon tu cuenta"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="normal"
            android:layout_marginTop="32dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/atletismo2"
            android:contentDescription="Decoración" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="32dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="clubdeportivo@tuemail.com"
            android:textColorHint="#ADADAD"
            android:background="@drawable/rounded_border"
            android:padding="12dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="24dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="Introduce la contraseña"
            android:textColorHint="#ADADAD"
            android:background="@drawable/rounded_border"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="INICIA SESIÓN"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:textColor="#1B1B1B"
            android:backgroundTint="#D0BA12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No tienes cuenta? Registrate"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
