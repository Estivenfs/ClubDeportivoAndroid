<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B">
    <include
        android:id="@+id/barraSuperior"
        layout="@layout/fragment_barra_superior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollContenidoRegistrarActividad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/barraSuperior"
        app:layout_constraintBottom_toTopOf="@+id/barraInferiorFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Busca por ID de la actividad"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ID"
                    android:textSize="16sp"
                    android:textColor="#D0BA12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Actividad"
                    android:textSize="16sp"
                    android:textColor="#D0BA12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Precio cuota"
                    android:textSize="16sp"
                    android:textColor="#D0BA12"
                    android:textStyle="bold"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#2C2C2C"
                android:paddingVertical="5dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fútbol"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:paddingEnd="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$ 15.000"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2C2C2C"
                android:paddingVertical="5dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:text="2"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Voley"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:paddingEnd="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$ 15.000"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2C2C2C"
                android:paddingVertical="5dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:paddingStart="5dp"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gimnasio"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:paddingEnd="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$ 20.000"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#2C2C2C"
                android:paddingVertical="5dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4"
                    android:paddingStart="5dp"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Natación"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="0dp"
                    android:paddingEnd="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$ 20.000"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:gravity="end"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID de la actividad"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/inputIDActividad"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Introduce ID de la actividad"
                android:inputType="number"
                android:textColorHint="#ADADAD"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_border"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio cuota"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="left"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/inputPrecioCuota"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Introduce el nuevo monto"
                android:inputType="number"
                android:textColorHint="#ADADAD"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_border"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btnModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modificar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1B1B1B"
                android:backgroundTint="#D0BA12"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>
        </LinearLayout>

    </ScrollView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/barraInferiorFragment"
        android:name="com.deportes.clubdeportivo.BarraInferiorFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
