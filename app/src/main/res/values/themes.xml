<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ClubDeportivo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores básicos (podés cambiarlos) -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Fondo de pantalla por defecto -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Configuracion de color de la barra de estado y de la barra de navegacion -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

</resources>

